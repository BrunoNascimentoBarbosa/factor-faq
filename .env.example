# ==============================================
# FACTOR FAQ - Variáveis de Ambiente  
# ==============================================

# Server
NODE_ENV=production
PORT=10000

# Database (PostgreSQL - Render fornece automaticamente)
DATABASE_URL=postgresql://user:password@host:5432/factor_faq

# JWT (IMPORTANTE: Gere secrets seguros!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# CORS (URL do frontend - não necessário em servidor único)
FRONTEND_URL=https://your-app.onrender.com

# Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# WhatsApp
WHATSAPP_NUMBER=5511999999999
